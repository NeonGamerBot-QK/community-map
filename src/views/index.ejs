<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Map render</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <style>
        body {
            margin: 0;
            background: #000;
        }

        #map {
            height: 100vh;
            width: 100%;
            background: #000;
        }

        .leaflet-tile-container {
            filter: contrast(1.3) brightness(0.7) saturate(0.8);
            opacity: 0.7;
        }

        #map::before,
        #map::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            pointer-events: none;
        }

        #map::before {
            background:
                linear-gradient(0deg, rgba(0, 255, 255, 0.4) 2px, transparent 2px),
                linear-gradient(90deg, rgba(0, 255, 255, 0.4) 2px, transparent 2px),
                linear-gradient(0deg, rgba(0, 255, 255, 0.15) 1px, transparent 1px),
                linear-gradient(90deg, rgba(0, 255, 255, 0.15) 1px, transparent 1px);
            background-size: 100px 100px, 100px 100px, 20px 20px, 20px 20px;
            z-index: 400;
        }

        #map::after {
            background: radial-gradient(circle, transparent 0%, rgba(0, 0, 0, 0.3) 100%);
            z-index: 401;
        }
    </style>
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
</head>

<body>
    <div id="map"></div>
</body>
<script>
    function getMapData() {
        return fetch("./mapdata").then(r => r.json())
    }

    const map = L.map('map').setView([51.505, -0.09], 13);

    const tileLayer = L.tileLayer(`https://tile.openstreetmap.org/{z}/{x}/{y}.png`, {
        maxZoom: 19,
        attribution: 'Â© OpenStreetMap',
    }).addTo(map);
    window.addEventListener("load", async () => {
        const data = await getMapData()
        console.log(data)

        data.forEach(item => {
            L.marker([item.lat, item.long])
                .addTo(map)
                .bindPopup(item.name || 'Location');
        });
    })
</script>

</html>